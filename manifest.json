{
	"applications": {
		"gecko": {
			"id": "tab-playlist@metarmask.com"
		}
	},
	"default_locale": "en",
	"manifest_version": 2,
	"name": "__MSG_extension_name__",
	"short_name": "__MSG_extension_nameShort__",
	"version": "0.3",
	"description": "__MSG_extension_description__",
	"author": "/u/metarmask",
	"icons": {
		"128":"images/extension/icon-128.png"
	},
	"background": {
		"scripts": ["common.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"storage",
		"https://www.youtube.com/*"
	],
	"page_action": {
		"default_icon": {
			"16": "images/pageAction/enabled/16.png",
			"19": "images/pageAction/enabled/19.png",
			"24": "images/pageAction/enabled/24.png",
			"32": "images/pageAction/enabled/32.png"
		},
		"default_title": "__MSG_extension_nameShort__\n__MSG_icon_isHidden__"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["common.js", "content-script.js"]
		}
	]
}
